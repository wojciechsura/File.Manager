<UserControl x:Class="File.Manager.Controls.Display.TextDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:File.Manager.Controls.Display" 
             xmlns:ae="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ae:TextEditor HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                   Document="{Binding Document}" SyntaxHighlighting="{Binding Highlighting}"
                   FontFamily="Consolas" FontSize="12" ShowLineNumbers="True" IsReadOnly="True" />
</UserControl>
